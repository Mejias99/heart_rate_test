while True:

  try:
  
    heart_rate = int (input ("Introduce tu frecuencia cardiaca: "))

  except ValueError:

    print ("ERROR: debes introducir un número sin decimales")

  except:

    print ("UPS! Error inesperado")

  else:

    break
  
if heart_rate >= 60 and heart_rate <= 100:

	print ("Tu frecuencia cardiaca es normal")

elif heart_rate < 60:
	
	print ("¡Tu frecuencia cardiaca es demasiado baja!")
	
elif heart_rate > 100:
	
	print ("¡Tu frecuencia cardiaca es demasiado alta!")

else:
	
	print ("Error en el valor introducido. Reinicia el programa e inténtalo de nuevo.")
